        //-   +e.SELECT.select.country-list
        //-     option Россия
        //-     option Беларусь
        //-     option Казахстан
        //-     option Украина
        //-     option Азербайджан
        //-     option Армения    
        //-     option Грузия
        //-     option Молдавия

        //- .form-group.field-region.required
        //-   +e.SELECT.select.region-list
        //-     option Санкт-Петербург и Ленинградская область
        //-     option Москва и Московская область
        //-     option Новгородская область
        //-     option Псковская область
        //-     option Республика Карелия
        //-     option Мурманская область
        //-     option Калининградская область
        //-     option Вологодская область
        //-     option Тверская область

        .form-group
          if item.name == 'application'
            +b.BUTTON.btn--form.--application.--red(type='submit') #{item.button}
          if item.name == 'question'
            +b.BUTTON.btn--form.--question.--red(type='submit') #{item.button}
          p.help-block.help-block-success #{item.success}


